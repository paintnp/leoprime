# Coinbase Developer Platform (CDP)
CDP_API_KEY_ID=your-api-key-id
CDP_API_KEY_SECRET=your-api-key-secret-base64
CDP_WALLET_SECRET=your-wallet-secret-der-base64
CDP_WALLET_ADDRESS=0x...
CDP_WALLET_ID=your-wallet-id
CDP_NETWORK=base
NETWORK_ID=base-mainnet

# Optional: Wallet seed as JSON string (for production deployment)
# CDP_WALLET_SEED={"walletId":"...","seed":"...","networkId":"base-mainnet"}

# Voyage AI (embeddings)
VOYAGE_API_KEY=your-voyage-api-key
VOYAGE_EMBEDDING_MODEL=voyage-3.5

# MongoDB Atlas
MONGODB_ATLAS_URI=mongodb+srv://user:pass@cluster.mongodb.net/dbname
MONGODB_DB_NAME=leo_agent_db

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4

# Paywall Configuration
PAYWALL_SIGNING_SECRET=your-signing-secret
PAYWALL_PRICE_VOYAGE_USDC=0.50
PAYWALL_PRICE_MONGODB_USDC=0.50
PAYWALL_PRICE_CDP_USDC=0.50

# Paywall recipient address (where service payments go)
# For "pay to self" demo mode, set this to your CDP_WALLET_ADDRESS
# This allows real blockchain transactions without losing money
PAYWALL_RECIPIENT=0x...

# Demo Mode - forces the agent to always require paid services
# Set to "true" to guarantee payments happen during demos
DEMO_MODE=true
